{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "coenraads.bracket-pair-colorizer",
                "neilbrayfield.php-docblocker",
                "editorconfig.editorconfig",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-vsliveshare.vsliveshare"
            ],
            "settings": {
                "explorer.compactFolders": false,
                "files.associations": {
                    "*.inc": "php",
                    "*.install": "php",
                    "*.module": "php",
                    "*.theme": "php",
                    "*.html": "twig"
                },
                "emmet.includeLanguages": {
                    "twig": "html"
                },
                "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
                "intelephense.format.braces": "k&r",
                "intelephense.files.exclude": [
                    "**/.git/**",
                    "**/.svn/**",
                    "**/.hg/**",
                    "**/CVS/**",
                    "**/.DS_Store/**",
                    "**/node_modules/**",
                    "**/bower_components/**",
                    "**/vendor/**/{Tests,tests}/**",
                    "**/.history/**",
                    "**/vendor/**/vendor/**",
                    "**/*.api.php"
                ],
                "php.suggest.basic": false,
                "php.validate.enable": false,
                "php-docblocker.returnGap": true,
                "php-docblocker.useShortNames": true
            }
        }
    },
    "postCreateCommand": "service mariadb start",
    "postStartCommand": ["service apache2 start", "rm -rf /var/www/html && ln -sfn /workspaces/plain-php-codespace-Kadran-fork/src /var/www/html && service apache2 start"],
    "mounts": ["type=volume,source=mysql-data,target=/var/lib/mysql","source=${localWorkspaceFolder}/src,target=/var/www/html,type=bind"],
    "forwardPorts": [3306, 80, 8080],
    "remoteUser": "root"
    }
